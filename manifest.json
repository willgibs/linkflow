{
  "manifest_version": 3,
  "name": "Linkflow",
  "version": "2.1.0",
  "description": "Instantly analyze all links on a webpage, scan for broken links, or export all data with a single click.",
  "author": "Will Gibson",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Linkflow"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["popup.css"]
    }
  ]
}
